<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="mainPanel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="281.0" minWidth="427.0" prefHeight="510.0"
      prefWidth="430.0" stylesheets="@dark-mode.css" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.betterweather.betterweather.WeatherController">
    <TextField fx:id="cityInput" layoutX="14.0" layoutY="50.0" promptText="City"/>
    <Button fx:id="cityEnter" alignment="TOP_RIGHT" layoutX="340.0" layoutY="50.0" mnemonicParsing="false"
            onAction="#currentWeatherInCity" text="Enter"/>
    <Label fx:id="weatherLabel" layoutX="14.0" layoutY="102.0" text="Current Weather:"/>
    <TextField fx:id="weatherOut" editable="false" layoutX="140.0" layoutY="97.0" prefHeight="26.0" prefWidth="170.0"/>
    <Label fx:id="tempLabel" layoutX="21.0" layoutY="161.0" text="Current Temp:"/>
    <TextField fx:id="tempOut" layoutX="140.0" layoutY="157.0"/>
    <Button fx:id="exit" layoutX="345.0" layoutY="472.0" mnemonicParsing="false" onMouseClicked="#exitPressed"
            text="Exit"/>
    <ImageView fx:id="weatherImage" fitHeight="81.0" fitWidth="95.0" layoutX="319.0" layoutY="97.0" pickOnBounds="true"
               preserveRatio="true"/>
    <Label fx:id="fiveDayLabel" layoutX="69.0" layoutY="221.0" text="Five-Day Forecast">
        <font>
        <Font name="JetBrains Mono Extra Bold Nerd Font Complete" size="17.0"/>
        </font>
    </Label>
    <Label fx:id="dayOneLabel" layoutX="26.0" layoutY="267.0" text="Day 1:"/>
    <Label fx:id="dayTwoLabel" layoutX="26.0" layoutY="311.0" text="Day 2:"/>
    <Label fx:id="dayThreeLabel" layoutX="26.0" layoutY="356.0" text="Day 3:"/>
    <Label fx:id="dayFourLabel" layoutX="26.0" layoutY="397.0" text="Day 4:"/>
    <Label fx:id="dayFiveLabel" layoutX="26.0" layoutY="439.0" text="Day 5:"/>
    <TextField fx:id="dayOneOut" editable="false" layoutX="71.0" layoutY="263.0" promptText="Temp"/>
    <TextField fx:id="dayTwoOut" editable="false" layoutX="71.0" layoutY="307.0" promptText="Temp"/>
    <TextField fx:id="dayThreeOut" editable="false" layoutX="71.0" layoutY="352.0" promptText="Temp"/>
    <TextField fx:id="dayFourOut" editable="false" layoutX="71.0" layoutY="393.0" promptText="Temp"/>
    <TextField fx:id="dayFiveOut" editable="false" layoutX="71.0" layoutY="435.0" promptText="Temp"/>
    <Button fx:id="fiveDayButton" layoutX="340.0" layoutY="219.0" mnemonicParsing="false"
            onAction="#fiveDayWeatherInCity" text="Enter"/>
    <Label fx:id="weatherTitle" layoutX="21.0" layoutY="14.0" text="Weather">
        <font>
          <Font name="JetBrains Mono Extra Bold Nerd Font Complete" size="17.0"/>
        </font>
    </Label>
</Pane>
